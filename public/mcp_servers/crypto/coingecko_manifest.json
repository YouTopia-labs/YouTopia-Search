{
  "mcp_version": "1.0",
  "server_name": "CoinGecko",
  "description": "A tool for retrieving real-time price information for various cryptocurrencies.",
  "toolkit": "crypto",
  "tools": [
    {
      "name": "coingecko",
      "description": "Gets the current price of a specified cryptocurrency in USD.",
      "input_schema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "The name of the cryptocurrency (e.g., 'bitcoin', 'ethereum')."
          }
        },
        "required": ["query"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "data": {
            "type": "object"
          }
        }
      }
    }
  ]
}